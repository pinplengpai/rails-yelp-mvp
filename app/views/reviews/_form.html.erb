<h1 class="text-center">Creata a new review</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= simple_form_for [@restaurant, @review] do |f| %>

      <div class="form-inputs">
        <%= f.input :content %>
      </div>

       <div class="form-inputs">
        <%= f.input :rating, collection: Review::RATINGS %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>
    </div>
  </div>
</div>
